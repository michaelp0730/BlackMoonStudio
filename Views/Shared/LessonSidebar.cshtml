@model LessonSidebar
@using BlackMoonStudio.Models
@using System.Linq

<div class="col-md-4 col-lg-3">
    @if (Model.RelatedLessons?.Any() == true)
    {
        <h4 class="border-bottom-gray">Related Lessons</h4>
        <ul class="related-lessons">
            @foreach (var lesson in Model.RelatedLessons)
            {
                <li>
                    <h5>
                        <a href="@lesson.Url">@lesson.Title</a>
                    </h5>
                    <em><small>@lesson.Summary</small></em>
                </li>
            }
        </ul>
    }

    @if (Model.PreviousLesson != null)
    {
        <div class="sidebar-adjacent-lesson">
            <h4 class="border-bottom-gray">Previous Lesson</h4>
            <a href="@Model.PreviousLesson.Url" class="arrow-link">@Model.PreviousLesson.Title</a>
        </div>
    }

    @if (Model.NextLesson != null)
    {
        <div class="sidebar-adjacent-lesson">
            <h4 class="border-bottom-gray">Next Lesson</h4>
            <a href="@Model.NextLesson.Url" class="arrow-link">@Model.NextLesson.Title</a>
        </div>
    }
</div>
