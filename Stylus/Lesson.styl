@require'Variables.styl'

.lesson-details-breadcrumb {
  .lesson-details-breadcrumb {
    margin: 0
  }
}

.lesson-body-content {
  padding-top: size1
}

.lesson-sidebar {
  display: none
}

.lessons-see-all {
  float: right
  left: -13px
  margin-bottom: 20px
}

.related-lessons {
  list-style: none
  padding: 0

  li {
    margin-bottom: 30px
    padding: 0

    h5 {
      margin-bottom: 3px
    }
  }
}

.videos-container {
  .video-container {
    height: 0
    overflow: hidden
    padding-bottom: 56.25%
    padding-top: 30px
    position: relative

    iframe, object, embed {
      height: 100%
      left: 0
      position: absolute
      top: 0
      width: 100%
    }
  }

  .row.border-bottom-gray:last-child {
    border: none
  }
}

